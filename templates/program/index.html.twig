{% extends 'base.html.twig'%}

{% block title %} All Programs{% endblock %}

{% block body %}
    <h1>Toutes les series de la table program :</h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <div><a href="{{ path('app_index') }}">Retour à l'acceuil</a></div>
    <div>
        <a href="{{ path('program_new') }}">
            <button class="btn btn-dark">
                <i class="fas fa-plus"></i>
            </button>
        </a>
    </div>
{% endblock %}