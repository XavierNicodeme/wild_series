{% extends 'base.html.twig' %}

{% block title %}Hello ActorController!{% endblock %}

{% block body %}
    <h1>Tous les Acteurs</h1>
    <ul>
        {% for actor in actors %}
            <a href="{{ path('actor_show', {id: actor.id}) }}"><li>{{ actor.name }} </li></a>
        {% endfor %}
    </ul>
{% endblock %}
